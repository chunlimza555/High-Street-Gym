<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("partials/head.ejs") %>
    <title>Booking - High Street Gym</title>
</head>
<body>
    <main>
        <!-- Header with nav bar -->
        <%- include("partials/header.ejs") %>    
        <!-- Class location select box -->
        <h1>Your Booked Class : Delete </h1>


        <!-- Timetable list -->
        <section class = "body-background-box">
            <h2 class = "h2-text">Your booked detail</h2>
            

            <form action="/delete_booking_user_confirm" method="post" class="form-grid-booking">

                    <input type="hidden" name="booking_id" value="<%= editBooking.booking_id %>" />
                    <input type="hidden" name="booking_user_id" value="<%= editBooking.booking_user_id %>" />
                    <input type="hidden" name="booking_class_id" value="<%= editBooking.class_id %>" />
                    <input type="hidden" name="booking_created_datetime" value="<%= editBooking.booking_created_datetime %>" />
                    <div><p>Date: <%= editBooking.booking_created_datetime.toLocaleDateString('en-AU', { day: 'numeric', month: 'short', year: 'numeric' }) %></p></div>
                    <div><p>Class: <%= editBooking.activity_name %></p></div>
                    <div><p>Trainer: <%= editBooking.trainer_firstname %> <%= editBooking.trainer_lastname %></p></div>
                    <div><p>Location: <%= editBooking.location_name %></p></div>
                
                    
                
                <div class="button-booking">
                <a href="/create_booking?user_id=<%= editBooking.user_id %> ">Back</a>
                </div>

                <div class = "button-booking">
                <input type="submit" name="action" value="delete" class = "button"/>
                </div>

            </form> 

           

        </section>

        <!-- TODO Footer -->
        <%- include("partials/footer.ejs") %>
    </main>
</body>
</html>