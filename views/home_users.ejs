<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("partials/head.ejs") %>
    <title>Home Page - High Street Gym</title>
</head>
<body>
    <main>
        <!-- TODO header -->
        <%- include("partials/header.ejs") %>
        <!--  Main -->
        <section class="promotion">
            <img src="image/Gym-promotion.jpg" alt="promotion" />
        </section>

        <!--  Greeting -->
        <section class="greeting">
            <article id="greeting1">
            <h1>Welcome to High Street Gym</h1>
            </article>
        </section>

        <div class="container-register1">
            <h1 class="form-title">Get a free trial at High Street Gym</h1>
            <form action="#">
                <div class="main-user-info">
                    <div class="user-input-box">
                        <label for="firstName"><i class="fa-solid fa-user"></i><span> First Name: </span></label>
                        <input type="text" id="firstName" name="firstName" pattern="[a-zA-Z]+" required placeholder="Enter Your First Name" />
                        <div class="error-message" id="firstName-error">Please enter only alphabetic characters</div>
                    </div>
                    <div class="user-input-box">
                        <label for="lastName"><i class="fa-solid fa-user"></i><span> Last Name: </span></label>
                        <input type="text" id="lastName" name="lastName" pattern="[a-zA-Z]+" required placeholder="Enter Your Last Name" />
                        <div class="error-message" id="lastName-error">Please enter only alphabetic characters</div>
                    </div>

                    <div class="user-input-box">
                        <label for="email"><i class="fa-solid fa-envelope"></i><span> E-mail: </span></label>
                        <input type="email" id="email" name="email" required placeholder="Enter Your E-mail" />
                    </div>

                    <div class="user-input-box">
                        <label for="form_address"><i class="fa-solid fa-location-dot"></i><span> Address: </span></label>
                        <input id="form_address" type="text" name="address" required placeholder="Enter Your Address" />
                    </div>
                    <div class="user-input-box">
                        <label for="phone"><i class="fa-solid fa-address-book"></i><span> Phone Number: </span></label>
                        <input type="tel" id="phone" name="phone" required placeholder="Enter Your Phone Number" />
                    </div>

                    <div class="gender-details-box">
                        <i class="fa-solid fa-venus-mars"></i><span class="gender-title"> Gender </span>
                        <div class="gender-category">
                            <input type="radio" name="gender" id="male" />
                            <label for="male"><i class="fa-solid fa-mars"></i> Male </label>

                            <input type="radio" name="gender" id="female" />
                            <label for="female"><i class="fa-solid fa-venus"></i> Female </label>

                            <input type="radio" name="gender" id="other" />
                            <label for="other"><i class="fa-solid fa-transgender"></i> Other </label>
                        </div>
                    </div>
                    <div class="checkbox-details">
                        <label class="checkbox-title"><i class="fa-regular fa-circle-question"></i> How did you hear about us?</label>
                        <div class="checkbox-category">
                            <input type="checkbox" value="Google" id="chk_google" /><label for="chk_google"> Google</label> <input type="checkbox" value="Friends" id="chk_friends" /><label for="chk_friends"> Friends</label> <input type="checkbox" value="Other" id="chk_other" /> <label for="chk_other">Other</label>
                        </div>
                    </div>
                </div>

                <div class="form-submit-button">
                    <input type="submit" value="Get Your Free Pass" />
                </div>
            </form>
        </div>





        <!-- TODO Footer -->
        <%- include("partials/footer.ejs") %>
    </main>
</body>
</html>